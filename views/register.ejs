<% include partials/header%>

<div class="container">
  <h1 class="text-center mb-m">Sign Up</h1>
  <form action="/register" method="POST">
    <div class="form-group">
      <input
        class="form-control form-input center"
        type="text"
        name="username"
        placeholder="username"
      />
    </div>
    <input
      class="form-control form-input center"
      type="password"
      name="password"
      placeholder="password"
    />
    <div class="text-center mt-s">
      <button class="btn btn-default center">Register</button>
    </div>
  </form>
</div>

